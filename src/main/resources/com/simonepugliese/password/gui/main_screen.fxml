<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.simonepugliese.password.gui.GuiController">
   <center>
      <TableView fx:id="tableView" BorderPane.alignment="CENTER">
         <columns>
            <TableColumn fx:id="colType" prefWidth="100.0" text="Tipo" />
            <TableColumn fx:id="colLabel" prefWidth="300" text="Note" />
            <TableColumn fx:id="colUsername" prefWidth="200" text="Username" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <right>
      <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button maxHeight="36.0" maxWidth="95.0" minHeight="36.0" minWidth="95.0" onAction="#handleAdd" prefHeight="36.0" prefWidth="95.0" text="Aggiungi">
               <padding>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </padding></Button>
            <Button maxHeight="36.0" maxWidth="95.0" minHeight="36.0" minWidth="95.0" onAction="#handleEdit" prefHeight="36.0" prefWidth="95.0" text="Modifica">
               <padding>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </padding></Button>
            <Button maxHeight="36.0" maxWidth="95.0" minHeight="36.0" minWidth="95.0" onAction="#handleDelete" prefHeight="36.0" prefWidth="95.0" text="Elimina">
               <padding>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </padding></Button>
            <Button maxHeight="36.0" maxWidth="95.0" minHeight="36.0" minWidth="95.0" onAction="#handleShowPassword" prefHeight="36.0" prefWidth="95.0" text="Mostra">
               <padding>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </padding></Button>
         </children>
      </VBox>
   </right>
   <bottom>
      <Label fx:id="messageLabel" textFill="red" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
